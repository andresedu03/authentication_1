<h1>Sing in</h1>
    <%= form_with(model: @user, url:sessions_path, local:true) do |form| %>

        <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, placeholder: 'Enter your email address', required: true %>
        </div>

        <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, placeholder: 'Enter your password', required: true%>
        </div>

        <div class="actions">
            <%= submit_tag 'Sing in' %>
        </div>
     <% end %>   